<p style="color: green"><%= notice %></p>

<%= render @blog %>

<div class="btn-group text-center">
  <% if current_user.present? && @blog.user_id == current_user.id %>
    <%= link_to "Edit this blog", edit_blog_path(@blog) , class:"btn btn-primary fw-500 me-3" %> 
    <%= button_to "Destroy this blog", @blog, class:"btn btn-danger fw-500",  form: { data: { turbo_confirm: 'Are you sure?' }  }%>
  <% end %>
  <%= link_to "Back", :back ,class:"btn btn-outline-sucess"%>
</div>
